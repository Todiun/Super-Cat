<div class="landing-container">
    <p class="question-text">There you go. The last step.</p>
    <% if @tempcart != []%> <%# @tempcart contient les objets du panier, soit online soit offline (voir le controlleur) %>
        <% for item in @tempcart do%>
            <div class="cart-item">
                <h4><%= item.name %></h4>
                <img src="<%=asset_path(item.cat_image)%>" width="60px">
                <p><small><%= item.race%></small></p>
                <p><%= item.description%></p>
                <%= button_to 'Remove from cart', remove_from_cart_path(item), method: :post %>
            </div>
            ___
        <% end %>
    <% else %>
        <p> There is nothing here </p>
    <%end%>
</div>
