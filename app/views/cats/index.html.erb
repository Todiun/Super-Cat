<p style="color: green"><%= notice %></p>

<% content_for :title, "Cats" %>

<h1>Cats</h1>

<div id="cats">
  <%owned = false%>
  <% @cats.each do |cat| %>
    <%for u in cat.users%>
      <%if u == current_user%>
        <%owned = true%>
      <%end%>
    <%end%>

    <%if owned == false%>
      <%= render "cat_card", cat: cat %>
    <%end%>
  <% end %>
</div>
