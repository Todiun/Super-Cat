<% content_for :title, "Find your perfect cat" %>

<div class="container text-center my-5">
<div class="container-fluid bg-primary-subtle py-4 mb-4 text-center">
  <h2 class="text-dark mb-0">Find your perfect cat in seconds.</h2>
</div>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @cats.each do |cat| %>
      <% unless cat.users.include?(current_user) %>
        <div class="col">
          <%= render "cat_card", cat: cat %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
